{
  "version": 2,
  "builds": [
    {
      "src": "cliente-web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://crepes-coffee-api.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/cliente-web/build/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://crepes-coffee-api.onrender.com/api"
  }
} 